<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hliu.cst2335_project.homeThermostatPkg.homeThermo_mainPkg.HouseThermostatActivity">


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/button_addNewTemp_h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@android:drawable/ic_menu_add"
        />

    <TextView
        android:id="@+id/addNewTemp_string_h"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textSize="2mm"
        android:layout_toEndOf="@id/button_addNewTemp_h"
        android:text="Add New Temperature Setting" />
    <!--<Button-->
        <!--android:id="@+id/button_addTemp"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_alignParentBottom="true"-->
        <!--android:layout_centerHorizontal="true"-->
        <!--android:text="Add New Temperature Setting" />-->
    <LinearLayout
        android:id="@+id/linearLayout_progressBar_h"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:gravity="center">

        <TextView
            android:id="@+id/progressBar_stringCount_h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="0"/>

        <TextView
            android:id="@+id/progressBar_stringText_h"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text=" / 14  " />

    </LinearLayout>


    <ProgressBar
        android:id="@+id/progressBar_h"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayout_progressBar_h"
        android:max="14"
        android:minHeight="5mm"
        android:minWidth="20mm"
        android:padding="1mm"
        android:progress="1"
        android:indeterminate="false"
        android:visibility="visible"/>


    <ListView
        android:id="@+id/listView_tempList_h"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/button_addNewTemp_h"
        android:layout_below="@id/progressBar_h"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>




